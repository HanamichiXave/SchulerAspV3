@{
    ViewBag.Title = "Sections";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br><br><br>
<ul class="breadcrumb">
  <li><a href="@Url.Action("Index","Admin")">Home</a></li>
  <li class="active">Sections</li> 
</ul>
<div class="container">
    <h1 class="page-header">Sections</h1>
    <div class="row sec-new">
        <h4 class="col-sm-2">Find Student: &nbsp;</h4>
        <div class="has-feedback col-sm-10">
            <input class="form-control" type="text" placeholder="Type here to search for students">
            <span class="form-control-feedback pr-2"><i class="fa fa-search"></i></span>
        </div>
    </div>
    <div class="row" style="margin-top: -20px; margin-bottom: 30vh"><br>
        <table class="table table-hover table-bordered bg-white">
            <thead>
              <tr class="bg-primary">
                <th>No.</th>
                <th style="width: 35%">Section Name</th>
                <th>Grade Level</th>
                <th>No. of students</th>
                <td>Adviser</td>
                <td>Room</td>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>1</td>
                <td>Section 1</td>
                <td>Grade 1</td>
                <td>5</td>
                <td>Sample Sample</td>
                <td>Rm 201</td>
                <td class="text-center">
                    <button class="btn btn-link" data-toggle="modal" data-target="#st1">[ Edit Details ]</button>
                    <a class="btn btn-link" href="@Url.Action("SectionStudents","Admin")">[ View Students ]</a>
                    <div id="st1" class="modal fade text-left" role="dialog">
                    <div class="modal-dialog">
                    <div class="modal-content">
                      <div class="modal-header m2">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">#1</h4>
                      </div>
                      <div class="modal-body">
                        <div class="form-group">
                            <label>Section Name</label>
                            <input class="form-control" type="text" name="">
                        </div>
                        <div class="form-group">
                            <label>Adviser</label>
                            <input class="form-control" type="text" name="">
                        </div>
                        <div class="form-group">
                            <label>Room</label>
                            <input class="form-control" type="text" name="">
                        </div>
                      </div>
                      <div class="modal-footer m2">
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Save</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                      </div>
                    </div>
                    </div>
                    </div>
                </td>
              </tr>
              <tr>
                <td>2</td>
                <td>Section 2</td>
                <td>Grade 1</td>
                <td>2</td>
                <td>Sample Sample</td>
                <td>Rm 202</td>
                <td class="text-center">
                    <button class="btn btn-link" data-toggle="modal" data-target="#st1">[ Edit Details ]</button>
                    <a class="btn btn-link" href="@Url.Action("SectionStudents","Admin")">[ View Students ]</a>
                </td>
              </tr>
              <tr>
                <td>3</td>
                <td>Section 3</td>
                <td>Grade 1</td>
                <td>3</td>
                <td>Sample Sample</td>
                <td>Rm 203</td>
                <td class="text-center">
                    <button class="btn btn-link" data-toggle="modal" data-target="#st1">[ Edit Details ]</button>
                    <a class="btn btn-link" href="@Url.Action("SectionStudents","Admin")">[ View Students ]</a>
                </td>
              </tr>
            </tbody>
        </table>
    </div>
</div>