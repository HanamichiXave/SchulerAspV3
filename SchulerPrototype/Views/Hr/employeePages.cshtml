@{
    ViewBag.Title = "hr_management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <br>
    <br>
    <div class="page-header" style="color: #000033">
        <center><h2><strong>Employee</strong></h2><br /></center>
    </div>

    <div class="row">
        <div class="col-lg-12">

            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                <a href="@Url.Action("addEmployee", "Hr")">
                    <div class="hovereffect">
                        <img class="img-responsive" src="~/Content/images/Hr/add.png" width="100" height="100" />
                        <div class="overlay">
                            <h2>Add New Employee</h2>
                            <p class="info">
                                Add an employee by filling up all forms needed.
                            </p>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                <a href="@Url.Action("empList", "Hr")">
                    <div class="hovereffect">
                        <img class="img-responsive" src="~/Content/images/Hr/employeelist.png" width="100" height="100" />
                        <div class="overlay">
                            <h2>Employee List</h2>
                            <p class="info">
                                View a list of every currently employed staffs and their informations.
                            </p>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                <a href="@Url.Action("hrResigned", "Hr")">
                    <div class="hovereffect">
                        <img class="img-responsive" src="~/Content/images/Hr/add.png" width="100" height="100" />
                        <div class="overlay">
                            <h2>Lists of Inactive</h2>
                            <p class="info">
                                Lists of employee who resinged.
                            </p>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-lg-6 col-md-4 col-sm-6 col-xs-12">
                <a href="@Url.Action("hrEmployeeLeave", "Hr")">
                    <div class="hovereffect">
                        <img class="img-responsive" src="~/Content/images/Hr/add.png" width="100" height="100" />
                        <div class="overlay">
                            <h2>Leave Management</h2>
                            <p class="info">
                                A list of all the leaves an employee committed.
                            </p>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-lg-6 col-md-4 col-sm-6 col-xs-12">
                <a href="@Url.Action("hrAttendance", "Hr")">
                    <div class="hovereffect">
                        <img class="img-responsive" src="~/Content/images/Hr/add.png" width="100" height="100" />
                        <div class="overlay">
                            <h2>Attendance</h2>
                            <p class="info">
                                A record of attendance for every department member.
                            </p>
                        </div>
                    </div>
                </a>
             </div>
                
            
        
        </div>
     </div>
</div>



